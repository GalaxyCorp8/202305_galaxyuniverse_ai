	"version": "0.2.0",
	"configurations": [
		{
			"name": "Attach to Chrome",
			"port": 5500,
			"request": "attach",
			"type": "chrome",
			"webRoot": "${workspaceFolder}"
		},

		{
			"name": "Chrome debug",
			"type": "chrome",
			"request": "launch",
			"url": "http://localhost:3000",
			"webRoot": "${workspaceFolder}"
		},

		{
			"name": "Attach to Chrome via 3000",
			"port": 3000,
			"request": "attach",
			"type": "chrome",
			"webRoot": "${workspaceFolder}"
		},
		{
			"name": "Attach to Edge",
			"port": 9222,
			"request": "attach",
			"type": "msedge",
			"webRoot": "${workspaceFolder}"
		},
		{
			"name": "Launch Chrome against localhost",
			"type": "chrome",
			"request": "launch",
			"url": "http://localhost:3000",
			"webRoot": "${workspaceFolder}"
		}
	]
}
